<?xml version="1.0"?>
<!DOCTYPE conversion SYSTEM "../config.dtd">

<conversion>
	<convertcoordinates/>

	<md5mesh>
		<inputfile>bernie/bernie.md5mesh</inputfile>
		<outputfile>bernie.mesh.xml</outputfile>

		<submeshes>
		    <submesh index="0"/>
		    <submesh index="1">
		        <materialname>md5models/bernie/fx</materialname>
		    </submesh>
		</submeshes>
		
		<md5skeleton>
			<outputfile>bernie.skeleton.xml</outputfile>
			<md5anim>
				<animationname>SpitAttack</animationname>
				<inputfile>spit_attack1.md5anim</inputfile>
			</md5anim>
		</md5skeleton>
	</md5mesh>
</conversion>
