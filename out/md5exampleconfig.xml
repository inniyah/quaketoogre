	<md5mesh>
		<inputfile>
			<filename>bernie/bernie.md5mesh</filename>
		</inputfile>
		
		<outputfile>
			<filename>bernie.mesh.xml</filename>
		</outputfile>
		
		<submeshes>
		    <submesh>
		        <index>0</index>
		    </submesh>
		    <submesh>
		        <index>1</index>
